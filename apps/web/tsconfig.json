{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "postcss.config.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    // "module": "commonjs"
    "baseUrl": "./src", // all paths are relative to the baseUrl
    "paths": {
      "@/*": ["*"] // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
    }
  }
}
